<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In</title> 
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
   <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.2.0/css/font-awesome.min.css'>
   <link rel="stylesheet" href="css/user-signin-signup.css.css">
   <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
   </head>
<body>
    <div class="header-container">
        <nav>
            <div class="menu">
              <div class="logo">
                <a href="/">CodingLab</a>
              </div>
              <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/services">Services</a></li>
                <li><a href="/blog">Blog</a></li>
                <li><a href="/sign-in">Sign In/Up</a></li>
              </ul>
            </div>
        </nav>
    </div>
    <div class="content-container">
        <div class="userInputField">
            <h1>Create an Account</h1>
            <form action="/create-user" method="POST">
                <fieldset>
                    <legend>Sign Up Now!:</legend>
                    <div class="form-box">
                        <label for="username">User ID:</label>
                        <input type="text" id="username" name="username" required placeholder="Input your id!"><br>
                    </div>
                    <div class="form-box">
                        <label for="email">Email:</label>
                        <input type="email" id="email" name="email" required placeholder="Input your email!"><br>
                    </div>
                    <div class="form-box">
                        <label for="address">Address:</label>
                        <input type="text" id="address" name="address" required placeholder="Your email address!"><br>
                    </div>
                    <div class="form-box">
                        <label for="city">City:</label>
                        <input type="text" id="city" name="city" placeholder="City name!"><br>
                    </div>
                    <input class="submit" type="submit" value="Sign Up">
                    <p class="sign-in-text">Already have an account? <a href="/sign-in">Sign in</a></p>
                    <p class="sign-in-social">Or Sign in with:</p>
                    <div class="social-icon-container">
                        <box-icon type='logo' name='meta'></box-icon>
                        <box-icon name='google' type='logo' ></box-icon>
                        <box-icon name='apple' type='logo' ></box-icon>
                        <box-icon name='linkedin-square' type='logo' ></box-icon>
                    </div>
                </fieldset>
            </form>
            
        </div>
    </div> 
</body>
</html>